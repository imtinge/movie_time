<div class="col-md-12">
  <div class="group">
    <%= link_to 'Add movie', new_movie_path, class: 'btn btn-primary pull-right' %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>Creator</th>
        <th>Review counts</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td>#</td>
          <td><%= link_to movie.title, movie_path(movie) %></td>
          <td><%= movie.description %></td>
          <td><%= movie.user.email %></td>
          <td><%= movie.reviews.count %></td>
          <td>
            <% if current_user && current_user == movie.user %>
              <%= link_to 'Edit', edit_movie_path(movie), class: 'btn btn-sm btn-default' %>
              <%= link_to 'Delete', movie_path(movie), method: :delete, data:{ confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
