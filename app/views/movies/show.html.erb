<div class="col-md-12">
  <div class="group">
    <span class="pull-right">
      <% if current_user && current_user.is_favorite_of?(@movie) %>
        <label class="label label-success" for="">已收藏</label>
        <%= link_to '增加评论', new_movie_review_path(@movie), class: 'btn btn-primary' %>
      <% else %>
        <label class="label label-warning" for="">未收藏</label>
        <%= link_to '收藏', collect_movie_path(@movie), method: :post, class: 'btn btn-success' %>
      <% end %>
    </span>
    <% if current_user && current_user == @movie.user %>
      <%= link_to 'Edit', edit_movie_path(@movie), class: 'btn btn-primary pull-right' %>
    <% end %>
  </div>
  <h2><%= @movie.title %></h2>
  <p><%= @movie.description %></p>
  <hr>
  <table class="table">
    <thead>
      <tr>
        <th>评论内容</th>
        <th>评论人</th>
        <th>评论时间</th>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.content %></td>
          <td><%= review.user.email %></td>
          <td><%= review.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
